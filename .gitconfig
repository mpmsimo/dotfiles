[include]
    path = ~/.gitconfig.local

[color]
    ui = auto

[color "branch"]
    current = red
    local = yellow
    remote = green

[color "diff"]
    meta = cyan
    frag = magenta
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    editor = vim

[alias]
    a = add
    aa = add --all

    b = branch

    c = commit
    ca = commit -a
    cd = commit --amend
    cad = commit -a --amend

    cp = cherry-pick

    co = checkout
    cob = checkout -b

    lc = log ORIG_HEAD.. --stat --no-merges
    llog = log --date=local

    p = push
    pom = push origin master
    po = push origin

    pl = pull

    s = status -sb

    uco = reset HEAD^
