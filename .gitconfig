[user]  
	name = Michael Simo
	email = os@mpmsimo.com

[push]
    default = simple

[branch "master"]
    remote = origin
    merge = refs/heads/master

[color]
    ui = auto

[color "branch"]
    current = red
    local = yellow
    remote = green

[color "diff"]
    meta = cyan
    frag = magenta
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    editor = vim
	excludesfile = /Users/msimo/.gitignore_global

[alias]
    a = add
    aa = add --all

    b = branch

    c = commit
    ca = commit -a
    cd = commit --amend
    cad = commit -a --amend

    cp = cherry-pick

    co = checkout
    cob = checkout -b

    lc = log ORIG_HEAD.. --stat --no-merges
    llog = log --date=local

    p = push
    pom = push origin master
    po = push origin

    pl = pull
    s = status -sb

    uco = reset HEAD^
    hist = log --follow --
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/msimo/.stCommitMsg
