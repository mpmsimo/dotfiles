#!/bin/bash
#.chunkwmrc - ChunkWM remote configuration

# To be replaced with Yabai
# https://github.com/koekeishiya/yabai/wiki/Disabling-System-Integrity-Protection

# =========================================
# Variables (common commonly used settings)
# =========================================
focused_border_color="0xff37138c"
preselect_border_color="0xff960000"

# =========================================
# Core Settings
# =========================================

# Logging
chunkc core::log_file stdout
chunkc core::log_level warn

# Plugins
chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm/plugins
chunkc core::hotload 1 # autoreload if .so file is changed in plugin_dir

# =========================================
# chunkwm-tiling
# =========================================
chunkc set global_desktop_mode          bsp
chunkc set 1_desktop_mode               monocle
chunkc set 2_desktop_mode               bsp
chunkc set 3_desktop_mode               bsp

chunkc set global_desktop_offset_top    0
chunkc set global_desktop_offset_bottom 0
chunkc set global_desktop_offset_left   0
chunkc set global_desktop_offset_right  0
chunkc set global_desktop_offset_gap    1

chunkc set desktop_padding_step_size    10.0
chunkc set desktop_gap_step_size        3.0

chunkc set bsp_spawn_left               1 
chunkc set bsp_optimal_ratio            1.618
chunkc set bsp_split_mode               optimal
chunkc set bsp_split_ratio              0.5

chunkc set mouse_follows_focus          0

chunkc set monitor_focus_cycle          1

chunkc set window_focus_cycle           monitor
chunkc set window_float_next            0
chunkc set window_float_center          1
chunkc set window_region_locked         1

chunkc set preselect_border_color       "${preselect_border_color}"
chunkc set preselect_border_width       4
chunkc set preselect_border_radius      4

chunkc set custom_bar_enabled           1
chunkc set custom_bar_all_monitors      0
chunkc set custom_bar_offset_top        20
chunkc set custom_bar_offset_bottom     0
chunkc set custom_bar_offset_left       0
chunkc set custom_bar_offset_right      0

# =========================================
# chunkwm-border
# =========================================
chunkc set focused_border_color         "${focused_border_color}"
chunkc set focused_border_width         12
chunkc set focused_border_radius        6
chunkc set focused_border_skip_floating 1
chunkc set focused_border_skip_monocle  1

# =========================================
# chunkwm-ffm
# =========================================
#chunkc set ffm_bypass_modifier           \"cmd shift\"
#chunkc set ffm_standby_on_float          0

# =========================================
# chunkwm-sa
# =========================================
chunkc set window_float_topmost         1
chunkc set window_fade_inactive         1
chunkc set window_fade_alpha            0.7
chunkc set window_fade_duration         0.5
chunkc set window_use_cgs_move          1

# =========================================
# Load plugins
# =========================================

# If chunkc plugin_dir is not set, the absolutepath is necessary.
chunkc core::load tiling.so
chunkc core::load border.so
#chunkc core::load ffm.so

# =========================================
# Start the WM
# =========================================

# MacOSX native applications
chunkc tiling::rule --owner \"System Preferences\" --state float &
chunkc tiling::rule --owner Finder --name Copy --state float &
chunkc tiling::rule --owner Finder --name Move --state float &
chunkc tiling::rule --owner Finder --name Info --state float &
chunkc tiling::rule --owner Finder --name Connect --state float &

# Third-party applications
chunkc tiling::rule --owner kitty --role AXWindow --subrole AXDialog --state tile &
chunkc tiling::rule --owner Slack --desktop 1 --follow-desktop &

chunkwm --load-sa
