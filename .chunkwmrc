#!/bin/bash
#.chunkwmrc - ChunkWM remote configuration

# =========================================
# Plugns
# =========================================
# Specify the absolutepath to the directory to use when 
# loading a plugin. '~' expansion is supported.
# chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm_plugins
chunkc core::plugin_dir ~/.chunkwm_plugins

# If enabled, chunkwm will monitor the specified plugin_dir
# and automatically reload any '.so' file that is changed.
chunkc core::hotload 1

# =========================================
# Logging
# =========================================
chunkc core::log_file stdout
chunkc core::log_level warn

# =========================================
# chunkwm-tiling
# =========================================
chunkc set global_desktop_mode           bsp

#chunkc set 1_desktop_tree                ~/.chunkwm_layouts/dev_1
chunkc set 2_desktop_mode                monocle
chunkc set 5_desktop_mode                float

chunkc set global_desktop_offset_top     1
chunkc set global_desktop_offset_bottom  1
chunkc set global_desktop_offset_left    1
chunkc set global_desktop_offset_right   1
chunkc set global_desktop_offset_gap     4

chunkc set desktop_padding_step_size     10.0
chunkc set desktop_gap_step_size         5.0

chunkc set bsp_spawn_left                1
chunkc set bsp_optimal_ratio             1.618
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5

chunkc set monitor_focus_cycle           1
chunkc set window_focus_cycle            monitor

chunkc set mouse_follows_focus           0
chunkc set window_float_next             0
chunkc set window_float_center           1

chunkc set window_region_locked          1

chunkc set preselect_border_color        0xff960000
chunkc set preselect_border_width        4
chunkc set preselect_border_radius       4

# =========================================
# chunkwm-border
# =========================================
chunkc set focused_border_color          0xff37138c
chunkc set focused_border_width          4
chunkc set focused_border_radius         4
chunkc set focused_border_skip_floating  0
chunkc set focused_border_skip_monocle   1

# =========================================
# chunkwm-ffm
# =========================================
chunkc set ffm_bypass_modifier           \"cmd shift\"
chunkc set ffm_standby_on_float          0

# =========================================
# Load plugins + Start the WM
# =========================================

# If chunkc plugin_dir is not set, the absolutepath is necessary.
chunkc core::load tiling.so
chunkc core::load border.so
chunkc core::load ffm.so

chunkc tiling::rule --owner \"System Preferences\" --state float
chunkc tiling::rule --owner Finder --name Copy --state float
chunkc tiling::rule --owner kitty --role AXWindow --subrole AXDialog --state tile &
chunkc tiling::rule --owner Finder --name Copy --state float &
chunkc tiling::rule --owner Spotify --desktop 5 --follow-desktop &
chunkc tiling::rule --owner Slack --desktop 6 --follow-desktop &
chunkwm --load-sa
